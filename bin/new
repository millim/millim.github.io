#!/usr/bin/env ruby

require "erb"
new_name = ARGV[0]
if new_name.nil?
  puts "给个名字"
  return
end



id = 0
File.open(File.join(__dir__, '../', 'id'), 'r+') do |f|
  a = f.readline
  id = a.to_i + rand(20) + 1
  f.pwrite id, 0
end

erb = ERB.new %q{---
layout: post
title: <%= new_name %>
categories: [demo]
published: true
tags: [demo]
date: <%= Time.now.strftime('%Y-%m-%d') %>
id: <%= id %>
---
}

File.open("./_drafts/#{new_name}.md", "w") do |f|
  f.puts erb.result
end